@model VM_ArticleHtmlEdit
@{
    ViewData["Title"] = "HtmlEdit";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}



<div style="padding:5px;">
    <form method="post">
        <textarea asp-for="ContentText" required lay-verify="required" id="txt_articleContentTextHtml" style="width:100%; height:480px;" class="layui-textarea"></textarea>
        <input type="hidden" asp-for="ArticleKey" />
        <div style="text-align:center; margin-top:10px;">
            <a class="layui-btn layui-btn-normal" href="/Article/FormatCode" target="_blank">格式化代码工具</a>
            <button class="layui-btn layui-btn-green" type="submit"><i class="layui-icon">&#xe605;</i>提交</button>

        </div>


    </form>

</div>

@section CustomBottomScript{
    <script>
    if ($('#hfIsSave').val()) {
        layer.alert('操作完成！');
    }

    </script>
}